# Production Environment Variables Template
# Copy this file to .env.production and fill in your values
# DO NOT commit actual secrets to version control

# ============================================
# Database Configuration
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=hr_suite
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-domain.com
API_URL=https://api.your-domain.com

# ============================================
# JWT & Security
# ============================================
JWT_SECRET=CHANGE_ME_VERY_LONG_RANDOM_SECRET_KEY_MIN_32_CHARS
PAYROLL_JWT_SECRET=CHANGE_ME_ANOTHER_SECRET_KEY
HR_PAYROLL_JWT_PRIVATE_KEY=CHANGE_ME_RSA_PRIVATE_KEY
HR_PAYROLL_JWT_PUBLIC_KEY=CHANGE_ME_RSA_PUBLIC_KEY

# ============================================
# Admin Configuration
# ============================================
ADMIN_EMAILS=admin@your-domain.com,hr@your-domain.com
VITE_ADMIN_EMAILS=admin@your-domain.com,hr@your-domain.com

# ============================================
# S3 Storage Configuration (AWS S3)
# ============================================
DOCS_STORAGE_DRIVER=s3
DOCS_STORAGE_BUCKET=hr-docs
AWS_ACCESS_KEY_ID=CHANGE_ME_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_AWS_SECRET_KEY
AWS_REGION=ap-south-1
AWS_S3_ENDPOINT=https://s3.ap-south-1.amazonaws.com
AWS_S3_FORCE_PATH_STYLE=false

# ============================================
# MinIO Configuration (Optional - if not using AWS S3)
# ============================================
MINIO_ENABLED=false
MINIO_ENDPOINT=
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_PASSWORD
MINIO_BUCKET=hr-docs
MINIO_BUCKET_ONBOARDING=hr-onboarding-docs
MINIO_REGION=us-east-1
MINIO_USE_SSL=false
MINIO_PUBLIC_URL=

# ============================================
# AI/OpenAI Configuration
# ============================================
OPENAI_API_KEY=CHANGE_ME_OPENAI_API_KEY
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1
AI_TOOL_API_KEY=

# ============================================
# RAG Service Configuration
# ============================================
RAG_DB_NAME=rag_db
RAG_DB_USER=rag_user
RAG_DB_PASSWORD=CHANGE_ME_RAG_DB_PASSWORD
RAG_DB_PORT=5433
RAG_REDIS_PASSWORD=CHANGE_ME_RAG_REDIS_PASSWORD
RAG_REDIS_PORT=6381
CHROMA_PORT=8000
RAG_API_PORT=8001

# ============================================
# Payroll Integration (Optional)
# ============================================
PAYROLL_INTEGRATION_ENABLED=false
PAYROLL_API_URL=http://payroll-api:4000
PAYROLL_BASE_URL=https://payroll.your-domain.com
PAYROLL_BASE_DOMAIN=payroll.your-domain.com
PAYROLL_PROVISION_URL=http://payroll-api:4000/api/provision/tenant
PAYROLL_PROVISION_TOKEN=CHANGE_ME_PROVISION_TOKEN
ALLOW_UNVERIFIED_SSO=false
DEV_MODE=false
DISABLE_PAYROLL_LOCAL_AUTH=false

# ============================================
# Email Configuration (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=CHANGE_ME_SMTP_PASSWORD
SMTP_FROM=noreply@your-domain.com

# ============================================
# Frontend Build Variables
# ============================================
VITE_API_URL=https://api.your-domain.com

# ============================================
# Port Configuration
# ============================================
FRONTEND_PORT=3000
API_PORT=3001

