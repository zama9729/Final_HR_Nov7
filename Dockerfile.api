FROM node:20-alpine

WORKDIR /app

# Copy package files first
COPY package*.json ./

# Install dependencies
RUN npm ci || npm install

# Copy server code
COPY . ./

# Expose port
EXPOSE 3001

# Start server - install dependencies if node_modules is missing (due to volume mount)
CMD ["sh", "-c", "if [ ! -d 'node_modules' ] || [ ! -d 'node_modules/@aws-sdk' ]; then echo 'Installing dependencies...' && npm install; fi && npm start"]

